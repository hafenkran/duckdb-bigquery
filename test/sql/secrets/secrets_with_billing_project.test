# name: test/sql/secrets/secrets_with_billing_project.test
# description: Test BigQuery secrets with billing_project parameter for cross-project billing
# group: [secrets]

require bigquery

require-env BQ_TEST_PROJECT

require-env BQ_TEST_BILLING_PROJECT

require-env BQ_TEST_DATASET

require-env BQ_TEST_SA_KEY_PATH

statement ok
CREATE SECRET bq_billing_secret (
    TYPE bigquery,
    PROVIDER config,
    SCOPE 'bq://${BQ_TEST_PROJECT}',
    SERVICE_ACCOUNT_PATH '${BQ_TEST_SA_KEY_PATH}'
);

statement ok
ATTACH 'project=${BQ_TEST_PROJECT} dataset=${BQ_TEST_DATASET} billing_project=${BQ_TEST_BILLING_PROJECT}' AS bq (TYPE bigquery);

statement ok
SHOW ALL TABLES;

statement ok
DROP TABLE IF EXISTS bq.${BQ_TEST_DATASET}.billing_tbl;

statement ok
CREATE TABLE bq.${BQ_TEST_DATASET}.billing_tbl(i INTEGER);

query I
SELECT CASE
	WHEN project_id = '${BQ_TEST_BILLING_PROJECT}' THEN 'Match'
	ELSE 'No Match'
END AS compare_project_id
FROM bigquery_execute('bq', 'INSERT INTO ${BQ_TEST_PROJECT}.${BQ_TEST_DATASET}.billing_tbl VALUES (12)');
----
Match

query I
SELECT * FROM bq.${BQ_TEST_DATASET}.billing_tbl;
----
12

query I
SELECT * FROM bigquery_scan('${BQ_TEST_PROJECT}.${BQ_TEST_DATASET}.billing_tbl', billing_project='${BQ_TEST_BILLING_PROJECT}');
----
12

query I
SELECT count(*) FROM bigquery_query(
    '${BQ_TEST_PROJECT}',
    'SELECT * FROM `${BQ_TEST_PROJECT}.${BQ_TEST_DATASET}.billing_tbl`',
    billing_project='${BQ_TEST_BILLING_PROJECT}'
);
----
1

query III
SELECT total_bytes_processed, cache_hit, location FROM bigquery_query(
    '${BQ_TEST_PROJECT}',
    'SELECT 42 AS answer',
    dry_run=true,
    billing_project='${BQ_TEST_BILLING_PROJECT}'
);
